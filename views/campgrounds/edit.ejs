<% layout('layouts/boilerplate.ejs') %>
     <h1>Edit Form</h1>
    <form action="/campgrounds/<%=campground.id%>?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">
        <div class="mb-2">
             <label class="form-label" for="title">Title:</label>
            <input class="form-control" type="text" placeholder="title" name="title" id="title" value=<%=campground.title%> required>
        </div>
        <div class="mt-3 mb-4">
            <label class="form-label" for="location">Location</label>
            <input class="form-control" type="text" placeholder="location" name="location" id="location" value=<%=campground.location%> required>
        </div>
        <div class="mt-3 mb-4">
        <label for="price">Price</label>
        <div class="input-group">
        <div class="input-group-prepend">
          <span class="input-group-text" id="inputGroupPrepend">$</span>
        </div>
        <input type="number" class="form-control" id="price" placeholder="price" name="price" aria-describedby="inputGroupPrepend" value=<%=campground.price%> required>
        </div>
        </div>
        </div>
         <div class="mt-3 mb-4">
            <label class="form-label" for="description">Description</label>
            <textarea type="text" id="description" class="form-control" name="description"><%=campground.description%></textarea>
        </div>
        <div class="mb-3">
            <label for="formFileMultiple" class="form-label">Add Images</label>
            <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
        </div>
        <div class="mb-3">
            <% campground.image.forEach(function(img, i) { %>
                <img src="<%=img.url%>" class="img-thumbnail" alt="">
                <div class="form-check-inline">
                    <input type="checkbox" id="image-<%i%>" name="deleteImage[]" value="<%=img.filename%>">
                    <label for="image-<%i%>">Delete</label>
                </div>
           <% }) %>
        </div>
        <button class="btn btn-success">Done</button>
        <a class="btn btn-primary" href="/campgrounds/<%=campground.id%>">Back</a>
    </form>